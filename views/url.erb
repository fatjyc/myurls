<div class="jumbotron">
  <div class="container">
    <div class="url">
      <div class="form">
        <form class="form-inline" action="/url" method="post" id="url-form">
          <div class="form-group">
            <p style="margin-bottom: 0" class="domain"><%= @domain %></p>
          </div>
          <div class="form-group input">
            <input type="text" class="form-control" id="url" placeholder="URL" style="width: 100%">
            <input type="text" class="form-control" id="s-url" placeholder="URL" readonly style="width: 100%; display: none;">
          </div>
          <div class="from-group">
            <button type="submit" id="start" class="btn btn-default">Shorten</button>
            <a id="restart" href="javascript:void(0)">Shorten another URL</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
